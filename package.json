{
  "name": "i2c-bus-promised",
  "version": "0.2.2",
  "description": "Promised wrapper for i2c-bus",
  "main": "lib/index.js",
  "module": "lib/i2c-bus-promised.js",
  "author": "Alejandro Hernandez <ahernandezc@protonmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlejandroHerr/i2c-bus-promised.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=\"production\" babel -d lib src",
    "document-api": "documentation build src/** -f md -o API.md",
    "document-readme": "documentation readme src/** --section=API",
    "document": "yarn document-readme && yarn document-api",
    "example": "NODE_PATH=./src node -r babel-register -r babel-polyfill examples/index.js",
    "flow": "flow check",
    "flow-typed": "flow-typed install --overwrite || true",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "prepack": "yarn prepack:babel && yarn prepack:flow",
    "prepack:babel": "yarn build",
    "prepack:flow": "flow-copy-source src lib",
    "semantic-release": "semantic-release -e ./release.config.js",
    "test": "NODE_ENV=\"testing\" NODE_PATH=./src mocha -r babel-register --recursive src/**/*.spec.js",
    "test-watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^1.0.0",
    "@semantic-release/git": "^2.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "conventional-changelog-eslint": "^0.3.0",
    "dirty-chai": "^2.0.1",
    "documentation": "^5.3.5",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.63.1",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "mocha": "^4.1.0",
    "mos": "^1.3.1",
    "semantic-git-commit-cli": "^3.0.1",
    "semantic-release": "^12.2.5",
    "sinon": "^4.1.4",
    "sinon-chai": "^2.14.0",
    "sr-commit-analyzer": "^2.0.3",
    "sr-release-notes-generator": "^1.1.3"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "i2c-bus": "^1.2.5",
    "p-queue": "^2.3.0"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/npm",
    "publish": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
