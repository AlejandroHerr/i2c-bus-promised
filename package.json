{
  "name": "i2c-bus-promised",
  "version": "0.0.1",
  "description": "Promised wrapper for i2c-bus",
  "main": "lib/index.js",
  "module": "lib/i2c-bus-promised.js",
  "author": "Alejandro Hernandez <ahernandezc@protonmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=\"production\" rollup -c",
    "document": "documentation build src/** -f md -o API.md",
    "example": "NODE_PATH=./src node -r babel-register -r babel-polyfill examples/index.js",
    "flow": "flow check",
    "flow-typed": "flow-typed install --overwrite || true",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "prepack": "yarn prepack:babel && yarn prepack:flow",
    "prepack:babel": "yarn build",
    "prepack:flow": "flow-copy-source src lib",
    "test": "NODE_ENV=\"testing\" NODE_PATH=./src mocha -r babel-register --recursive src/**/*.spec.js",
    "test-watch": "npm test -- --watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "dirty-chai": "^2.0.1",
    "documentation": "^5.3.5",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.63.1",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "rollup": "^0.54.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-flow": "^1.1.1",
    "sinon": "^4.1.4",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "i2c-bus": "^1.2.5",
    "p-queue": "^2.3.0"
  }
}
