{
  "name": "i2c-bus-promised",
  "version": "0.2.5",
  "description": "Promised wrapper for i2c-bus",
  "main": "lib/index.js",
  "module": "lib/i2c-bus-promised.js",
  "author": "Alejandro Hernandez <ahernandezc@protonmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlejandroHerr/i2c-bus-promised.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=\"production\" babel -d lib src",
    "documentation": "documentation build src/** -f md -o API.md",
    "document": "yarn mos && yarn documentation",
    "example": "NODE_PATH=./src node -r babel-register -r babel-polyfill examples/index.js",
    "flow": "flow check",
    "flow-typed": "flow-typed install --overwrite || true",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "prepack": "yarn prepack:babel && yarn prepack:flow && yarn document",
    "prepack:babel": "yarn build",
    "prepack:flow": "flow-copy-source src lib",
    "semantic-release": "semantic-release -e ./release.config.js",
    "test": "BABEL_DISABLE_CACHE=1 node --trace-warnings ./runTests.js",
    "test-watch": "yarn test -- --watch",
    "test-coverage": "yarn jest --coverage"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^1.0.0",
    "@semantic-release/git": "^2.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "conventional-changelog-eslint": "^0.3.0",
    "cross-spawn": "^6.0.4",
    "documentation": "^5.3.5",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.63.1",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "jest": "^22.1.4",
    "mos": "^1.3.1",
    "semantic-git-commit-cli": "^3.0.1",
    "semantic-release": "^12.2.5",
    "sr-commit-analyzer": "^2.0.3",
    "sr-release-notes-generator": "^1.1.3"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "i2c-bus": "^1.2.5",
    "p-queue": "^2.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  }
}
